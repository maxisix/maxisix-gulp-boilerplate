/*******************************************************************************
GRID SETTINGS
*******************************************************************************/
// Lost Grid v6.2.0 - https://github.com/corysimmons/lost
@lost gutter 60px; // gutter accepts any unit value. 30px by default.
@lost flexbox no-flex; // flexbox accepts flex or no-flex (default).
@lost cycle auto; // cycle accepts none or any digit (although this is really weird). auto by default.





/*******************************************************************************
COLOR SETTINGS
*******************************************************************************/
// Arrays of color call your color like this $scotch-colors["primary"].dark;
$site-colors = {
  primary: {
    base: #8e3329,
    light: #d9534f,
    dark: #c9302c
  },
  accent: {
    base: #d98328,
    light: #dd8f3d,
    dark: #c57623
  },
  secondary: {
    base: #5a1321,
    light: #7b1a2d,
    dark: #51111e
  },
  foreground: {
    base: #191919,
    light: #333333,
    dark: #111111,
    darker: #000000
  },
  background: {
    base: #e9e9e9,
    light: #ffffff,
    dark: #dddddd
  }
}


// Common colours
$color-heading              = #000;
$color-text                 = #222;
$color-background           = #eee;
$color-border               = #ddd;
$color-border-heading       = #fee620;

// Links
$color-link-default         = #39c;
$color-link-visited         = #05B;
$color-link-hover           = #39c;
$color-link-active          = #39c;

// Logo
$color-logo-text            = $color-text;
$color-logo-background      = $color-border-heading;




/*******************************************************************************
FONT SETTINGS
*******************************************************************************/
/* Base sizes */
$base-font-size             = 16; /* browser default */
$base-line-height           = $base-font-size * 1.5;

/* Font stacks */
$font-family-sans           = "Helvetica Neue", Helvetica, Arial, sans-serif;
$font-family-serif          = Cambria, Georgia, Times, "Times New Roman";
$font-family-monospace      = "Bitstream Vera Sans", Consolas, Menlo, "Lucida Console", "Liberation Mono", Courier, monospace;
